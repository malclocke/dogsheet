<div id="timeslice-form-errors" class="ui-state-error"><%= form.error_messages %></div>
<h2>Add timeslice</h2>
<div class="timeslice-task-selector">
  <div class="form-item form-item-inline">
    <%= form.label :task_id %>
    <%= form.text_field :task_id %>
    <%= render :partial => 'tasks/list' %>
  </div>
  <div class="form-item form-item-inline">
    <%= form.label :new_task %>
    <%= text_field :task, :name %>
  </div>
</div>
<div class="timeslice-time-entry">
  <div class="form-item form-item-inline">
    <%= form.label :started_time %>
    <%= form.text_field :started_time, :size => 4 %>
  </div>
  <div class="form-item form-item-inline">
    <%= form.label :finished_time %>
    <%= form.text_field :finished_time, :size => 4 %>
  </div>
  <%= form.submit "Add" %>
</div>
