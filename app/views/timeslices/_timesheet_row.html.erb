    <tr id="timeslice-<%= timeslice.id %>">
      <td><%= render :partial => timeslice.task %></td>
      <td class="time"><%= link_to timeslice.started.to_s(:time_only), edit_timeslice_path(timeslice) %></td>
      <td class="time"><%= link_to timeslice.finished.to_s(:time_only), edit_timeslice_path(timeslice) %></td>
      <td class="time"><%= hours_and_minutes(timeslice.duration) %></td>
      <td class="decimal-time"><%= decimal_hours(timeslice.duration) %></td>
      <td>
        <%= link_to 'Delete', timeslice, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
