<h1>Task for <%= @task.client.name %></h1>

<p>
  <strong>Name:</strong>
  <%=h @task.name %>
</p>

<h2>Timeslices</h2>
<ul>
<% for timeslice in @task.timeslices %>
  <li><%= render :partial => timeslice %></li>
<% end %>
</ul>

<%= link_to 'Edit', edit_task_path(@task) %>
<%= link_to 'Manage timeslices', task_timeslices_path(@task) %>
<%= link_to 'Back', client_tasks_path(@task.client) %>
